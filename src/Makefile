TOPLEVEL =      .
#
# Name and version for binaries and tar files
#

NAME    =     logpro
VERSION =     $(shell awk '/Id:.*\$$/{printf $$3;}' $(NAME).ml)
ALWAYS:;      echo "\def\LOGPROVERSION{$(VERSION)}" > logproversion.tex
#
# Primary Sources: in order needed for loading
#
SOURCES =     syntax.ml         scanner.mll     \
              printer.ml        util.ml         \
              subst.ml          unify.ml        \
              trace.ml          parser.mly      \
              db.ml             builtin.ml      \
              logpro.ml
              
TESTS   =     $(shell echo *.lp)
LISTING =     db.mli parser.mli $(LP)
#
# ML sources generated by some tool (lex, yacc, ...) below.
#

GENERATED =   scanner.ml parser.ml parser.mli


# -----------------------------------------------------------------------------
# -----------------------------------------------------------------------------
# -----------------------------------------------------------------------------
include         $(TOPLEVEL)/Makefile.ocaml.project

























